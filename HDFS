mysql -u root -p
show databases;
create database retail_db;  || drop database retail_db;
create user reatil_dba identified by 'hadoop';  || drop user retail_dba;
grant all on retail_db.* to retail_dba;
flush privileges;
use retail_db;
source /root/hdp/retail_db.sql;


